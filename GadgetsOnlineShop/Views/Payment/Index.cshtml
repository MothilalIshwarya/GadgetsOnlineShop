@model IEnumerable<GadgetsOnlineShop.Models.Payment>
@{
    ViewBag.Title = "Index";
}
<h1>History</h1>
    @if (Model.Count() == 0)
    {
        <p>No Such Item Found</p>
    }
    else
    {
        foreach (var item in Model)
        {

            <div class="panel-body" style="display:block;width:500px;margin-left:300px;border:2px solid maroon;">
                <div class="col-sm-3 col-md-6" style="color:blue">
                    <img src="~/Image/@item.CartImage" width="100" height="100" />

                </div>

                <div class="col-sm-9 col-md-6">
                    <h5>
                        <span style="color:black">  MobileName: </span>
                        <span style="color:black"> @item.CartProductName </span>
                    </h5>
                    <h5>
                        <span style="color:black">  Price: </span>
                        <span style="color:black"> @item.Price </span>
                    </h5>
                    <h5>
                        <span style="color:black">  OderDate: </span>
                        <span style="color:black"> @item.OrderDate </span>
                    </h5>
                    <h5>
                        <span style="color:black">  DeliveryDate: </span>
                        <span style="color:black"> @item.DeliveryDate </span>
                    </h5>
                </div>

            </div>

            <br />
        }
    }


